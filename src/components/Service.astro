---
import Icon from './Icon.astro';
const { title, description } = Astro.props.data;
---

<div class=" services box stack gap-1 lg:gap-2">
  <div class="center-mobile-only">
    <Icon icon="desktop" color="var(--gray-200)" size="2.5rem" />
  </div>
  <div class="center-mobile-only">
    <h2>{title}</h2>
  </div>
  <p>{description}</p>
</div>

<style>

  .services {
    height: 11rem;
  }
	.box {
		/* border: var(--box-border); */
		/* border-radius: .6rem; */
		padding: 1rem 1rem 2rem 1rem;
		/* background: var(--bg-textured); */
		/* box-shadow: var(--shadow-lg); */

		@include mobile-only {
			display: none;
		}
	}

  .services h2 {
    font-size: var(--text-2xl);
    color: var(--accent-regular);
  }

	@media (min-width: 50em) {
    .services {
      height: 22rem;
    }
		.services h2 {
      font-size: var(--text-xl);
    }
	}
</style>
