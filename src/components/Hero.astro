---
interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title } = Astro.props;
---


<header class:list={['hero w-full bg-center bg-cover', align]}>
	<div class="flex items-center justify-center w-full h-full bg-gray-900 bg-opacity-50">
		<div class="text-center responsive-padding">
				<div class="py-2">
					<h1 class="title">{title}</h1>
				</div>
				<div class="py-6">
					{tagline && <p class="tagline">{tagline}</p>}
				</div>
		</div>
</div>
	<slot />
</header>


<style>

	.hero {
		/* background-image: url(https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=crop&amp;w=1050&amp;q=80); */
		background-image: url('/assets/backgrounds/header-background.png');
		height: 30rem;
	}

	.hero .responsive-padding {
		padding: 7rem;
	}

	.hero .text-align-center {
		text-align: center !important;
		margin: auto;
	}

	.title,
	.tagline {
		color: #af9c6d;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-2xl);
		color: #fefefe;
	}

	@media (min-width: 576px) {
		.hero {
			font-size: var(--text-lg);
		}

		.hero .responsive-padding {
			padding: 2rem;
		}
		
		.tagline {
			font-size: var(--text-lg);
		}
		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-4xl);
		}
	}
</style>
